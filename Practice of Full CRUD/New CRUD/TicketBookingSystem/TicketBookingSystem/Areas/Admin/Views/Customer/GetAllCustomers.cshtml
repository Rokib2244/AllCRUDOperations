@model CustomerListModel
@{
    ViewData["Title"] = "GetAllCustomers";
}

<h1>GetAllCustomers</h1>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">All Available Customers</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="products" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Contact Number</th>
                                    <th>Age</th>
                                    <th>Address </th>
                                    <th style="width:200px">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                        @foreach (var customer in Model.Customers)
                                        {
                                          <tr>
                                            <td>@customer.CustomerName</td>
                                            <td>@customer.ContactNumber</td>
                                            <td>@customer.Age</td>
                                            <td> @customer.Address</td>
                                            <td>
                                                <button type="submit" class="btn btn-info btn-sm" onclick="window.location.href = '/Admin/Customer/Edit/@customer.Id'" value="@customer.Id">
                                                    <i class="fas fa-pencil-alt"></i>Edit
                                                </button>
                                                <button type="submit" class="btn btn-info btn-sm" onclick="window.location.href = '/Admin/Customer/Delete/@customer.Id'" value="@customer.Id">
                                                    <i class="fas fa-trash"></i>Delete
                                                </button>
                                            </td>

                                         </tr>
                                        }

                                </tbody>
                            <tfoot>
                                <tr>
                                    <th>Customer Name</th>
                                    <th>Contact Number</th>
                                    <th>Age</th>
                                    <th>Address </th>
                                    <th style="width:200px">Action</th>
                                </tr>
                            </tfoot>
                        </table>
                        @*<partial name="_DeletePopupPartial" />*@

                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>