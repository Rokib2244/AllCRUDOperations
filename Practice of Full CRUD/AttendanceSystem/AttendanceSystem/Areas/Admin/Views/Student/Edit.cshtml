@model EditStudentModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<section>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-info">
                        <div class="card-header">
                            <h1 class="card-title">Edit Student</h1>
                        </div>
                        <form class="form-horizontal" method="post" asp-controller="Student" asp-action="Edit" asp-antiforgery="true">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="card-body">
                                <div class="form-group row">
                                    <label asp-for="StudentName" class="col-sm-2 col-form-label">Student Name</label>
                                    <div class="col-sm-10">
                                        <input asp-for="StudentName" id="studentName" type="text" class="form-control is-valid" placeholder="Student Name" />
                                    </div>
                                </div>
                                @*<div class="form-group row">
                                        <label asp-for="StudentRollNumber" class="col-sm-2 col-form-label">Student RollNumber</label>
                                        <div class="col-sm-10">
                                            <input asp-for="StudentRollNumber" id="studentRollNumber" type="number" class="form-control" placeholder="Student RollNumber" />
                                        </div>
                                    </div>*@

                                <div class="form-group row">
                                    <label asp-for="StudentRollNumber" class="col-sm-2 col-form-label">Student RollNumber</label>
                                    <div class="col-sm-10">
                                        <input type="number" class="form-control is-valid" asp-for="StudentRollNumber"
                                               id="studentRollNumber" placeholder="Student RollNumber">
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Save</button>
                                <a asp-action="Edit" asp-controller="Student" class="btn btn-default float-right">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

